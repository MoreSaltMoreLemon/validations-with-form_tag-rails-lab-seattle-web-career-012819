
<% if @author.errors.any? %>
  <ul id="error_explanation">
    <% @author.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<h2>Edit an Author</h2>
<%= form_tag author_path(@author), method: "patch" do %>
  <div class="field<%= " field_with_errors" unless @author.errors[:name].empty? %>">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="field<%= " field_with_errors" unless @author.errors[:email].empty? %>">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field<%= " field_with_errors" unless @author.errors[:phone_numer].empty? %>">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number", @author.phone_number %>
  </div>

  <%= submit_tag "Update" %>
<% end %>
